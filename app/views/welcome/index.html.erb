<script type="text/javascript">
var namer = [];
<%@tags.each do |tag| %>
    namer.push(<%= sanitize(tag.name.to_json) %>); 
<% end %>

$(document).ready(function() {
    $('#select2Form')
        .find('[name="colors-tags"]')
            .select2({
                // Specify tags
                tags: namer
            })
            .end()
});
</script>