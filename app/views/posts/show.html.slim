<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      a class="navbar-brand" href=root_url Killer Blog
    </div>
    <div>
      <ul class="nav navbar-nav">
        li  = link_to 'Home', root_url
        li class="active" = link_to 'Blogs', posts_path 
        li = link_to 'Events', events_path
        li = link_to 'Users', users_path
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <h2>
    <strong>
      = @post.title
    </strong>
  </h2> 
  <h6>
    = link_to 'Edit', edit_post_path(@post)
  </h6>
<p>
   i
    = @post.author
    =" added " 
    = @post.created_at.strftime('%b %d, %Y at %H:%M')
</p>
<div class="panel panel-default">
  <div class="panel-body">
    <p>
     = @post.body
    </p>
    -unless @post.image==nil
      = image_tag @post.image.data_url.to_s
  </div>
</div>

-if @post_tags
<div class="panel panel-info">
  <div class="panel-heading">Tags:</div>
  <div class="panel-body">
        -@post_tags.each do |tag|
          =link_to tag.name, tag
          =" "
  </div>
</div>
a href= post_path(@post, :format => "pdf") class="btn btn-info btn-lg" role="button" Download PDF
<p id="notice" class="bg-info h3">
  = notice
</p>
<div class="panel panel-default">
  <div class="panel-body">
   -unless @post.comments.empty?
  <h2>
    = pluralize(@post.comments.size, 'comment')
  </h2>

  <div id="comments">
   -for comment in @post.comments
    <div class="comment">
      <strong>
        = h(comment.author)
      </strong>
      <em>
        =" on "
        = comment.created_at.strftime('%b %d, %Y at %H:%M')
      </em>
      =simple_format comment.body
    </div>
  </div>
</div>
</div>

<h3>Add your comment:</h3>
 = render :partial => 'comments/form'
</div>